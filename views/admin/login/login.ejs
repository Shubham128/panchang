    <link href="/toastValidation/toasteur-default.min.css" rel="stylesheet"/>
    <script src="/toastValidation/toasteur.min.js"></script>
   
      
    <style>
     
#loader {  
 position: fixed;  
 left: 0px;  
 top: 0px;  
 width: 100%;  
 height: 100%;  
 z-index: 9999;  
 background-color: rgb(79 70 70 / 96%)
}  
#loader img{
 position: fixed;
 left: 25%;
    top: 25%;
    z-index: 9999;
    height: 25%;
    width: 40%;
}

     </style>


  </head>
  <body  class=" d-flex flex-column">

    
<div id="loader" style="display:none">
  <div class="page page-center">
    <div class="container container-slim py-4">
      <div class="text-center">
        <div class="mb-3">
          <a href="" class="navbar-brand navbar-brand-autodark"><img src="/images/logo.png"  alt=""></a>
        </div>
        <div class=" mb-3" style="font-size: 25px;color: #fff;">Please Wait...</div>
        <div class="progress progress-sm">
          <div class="progress-bar progress-bar-indeterminate"></div>
        </div>
      </div>
    </div>
  </div>
</div>

    <div class="page page-center">
      <div class="container container-tight py-4">
        <div class="text-center mb-4" style="margin-bottom:1rem !important;">
          <a href="." class="navbar-brand navbar-brand-autodark" >
            <img src="/images/logo.png" style="height :130px;"></a>
        </div>
        <% if(error.length>0){ %>
          <script>new Toasteur("top-right", 3000).error(" <%= error %>", 'Error!');</script>
             
         
          <% } %>
        <div class="card card-md">
          <div class="card-body">
            <h2 class="h2 text-center mb-4" style="padding: 10px 0px 10px 0;font-size: 23px;font-weight: 600;
            color: #012970;">Login to your account</h2>
            <form  name="login" id="login" method="post" action="/loginaction"  autocomplete="off" >
                
              <div class="mb-3">
                <label class="form-label">Username <span>*</span></label>
                <input type="text" name="username" id="username" class="form-control"  placeholder="Enter Username " autocomplete="off">
              </div>
              <div class="mb-2">
                <label class="form-label">Password <span>*</span></label>
                <div class="input-group input-group-flat">
                  <input type="password" name="password" id="password" class="form-control"  placeholder="Your password"  autocomplete="off">
                 
                </div>
              </div>
             
              <div class="form-footer" style="text-align:center;">
                <input type="submit" name="btnLogin" value="Login" class="btn btn-primary w-100" style="width:50% !important;" onclick="return validateLogin()" >
                
              </div>
            </form>
          </div>
         
        
      </div>
    </div>
    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="/dist/js/tabler.min.js" defer></script>
    <script src="/dist/js/demo.min.js" defer></script>
  </body>
</html>


<script>
	function validateLogin()
{
  var username = document.getElementById('username').value;
  var password = document.getElementById('password').value;
  if((username=='') && (password==''))
  {
    new Toasteur("top-right", 5000).error("Please Enter Login Details", 'Error!'); 
    return false;
  }
  if(username=='')
  {
   new Toasteur("top-right", 5000).error("The Username Field is Required", 'Error!'); 
    return false;
  }
  
  if(password=='')
  {
   new Toasteur("top-right", 5000).error("The Password Field is Required", 'Error!'); 
    return false;
  }
  else{

  $("#login").submit();
  $("#loader").show();  

return true;
}
  
}
</script>